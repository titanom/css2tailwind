{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "pipeline": {
    "styles:build": {
      "inputs": ["src/styles/**/*.css"],
      "outputs": [".styles/**/*.json"],
      "dependsOn": ["@titanom/css2tailwind#build"]
    },
    "topo": { "dependsOn": ["^topo"] },
    "types": {
      "inputs": ["src/**", "tsconfig.json"],
      "outputs": ["./**/*.tsbuildinfo"],
      "dependsOn": ["topo", "styles:build"]
    }
  }
}
